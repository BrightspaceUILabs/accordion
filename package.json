{
  "name": "@brightspace-ui-labs/accordion",
  "description": "Polymer-based accordion component",
  "keywords": [
    "web-components",
    "d2l-collapse-button",
    "iron-collapse-button",
    "collapse",
    "button"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/BrightspaceUILabs/accordion"
  },
  "homepage": "https://github.com/BrightspaceUILabs/accordion",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "accordion.js",
    "accordion-collapse.js"
  ],
  "scripts": {
    "start": "polymer serve",
    "test": "npm run test:lint && npm run test:polymer:local",
    "test:lint": "npm run test:lint:wc && npm run test:lint:js",
    "test:lint:js": "eslint . --ext .js,.html test/**/*.html demo/**/*.html",
    "test:lint:wc": "polymer lint -i \"./*\" \"test\" \"demo\"",
    "test:polymer:local": "polymer test --skip-plugin sauce",
    "test:polymer:sauce": "polymer test --skip-plugin local"
  },
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7",
    "@babel/eslint-parser": "^7",
    "@babel/polyfill": "^7",
    "@webcomponents/webcomponentsjs": "^2",
    "eslint": "^8",
    "eslint-config-brightspace": "^0.18.0",
    "eslint-plugin-html": "^6",
    "eslint-plugin-sort-class-members": "^1",
    "polymer-cli": "^1",
    "wct-browser-legacy": "^1"
  },
  "version": "3.0.0",
  "dependencies": {
    "@brightspace-ui/core": "^2",
    "@polymer/iron-collapse": "^3.0.0-pre.18",
    "@polymer/iron-flex-layout": "^3.0.0-pre.18",
    "@polymer/iron-selector": "^3.0.0-pre.18",
    "@polymer/polymer": "^3"
  }
}
